{
    // Opciones de formateo del código, codificación
    // y caracteres de fin de línea
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": false,
    "files.encoding": "utf8",
    "files.eol": "\n",
    "java.format.onType.enabled": false,

    // Limitar ancho de líneas a 120 caracteres antes de
    // introducir un salto de línea, para motivar a los
    // desarrolladores a hacer código corto, con pocos
    // niveles de anidamiento. También desactivar el
    // minimapa para ganar espacio horizontal
    "editor.wordWrapColumn": 120,
    "editor.wordWrap": "wordWrapColumn",
    "editor.minimap.enabled": false,

    // Descargar periódicamente confirmaciones nuevas que pueda
    // haber
    "git.autofetch": true,

    // Información de licencia (requiere la extensión licenser)
    "licenser.projectName": "Plugins de Spigot del Proyecto Khron",
    "licenser.license": "AGPLv3",
    "licenser.author": "Comunidad Aylas",
    "licenser.disableAutoHeaderInsertion": false,
    "licenser.useSingleLineStyle": false,

    // Usar terminal integrada Bash, tanto en Windows como en Linux.
    // En Windows, usamos la terminal bash proporcionada por Git
    "terminal.explorerKind": "integrated",
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "terminal.integrated.enableBell": true,

    // Título de la ventana de VS Code
    "window.title": "${dirty}${activeEditorShort}${separator}Plugins de Khron${separator}${appName}",
    "java.configuration.updateBuildConfiguration": "interactive",
}